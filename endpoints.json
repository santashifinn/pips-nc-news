{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/97050/pexels-photo-97050.jpeg?w=700&h=700",
          "comment_count": "6"
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves a single article specified by article_id",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article...",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "article_img_url": "https://images.pexels.com/photos/97050/pexels-photo-97050.jpeg?w=700&h=700",
        "comment_count": "11"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments on a specified article",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "comment_id": 11,
          "body": "Text from the article...",
          "article_id": 3,
          "author": "icellusedkars",
          "votes": 0,
          "created_at": "2018-05-30T15:59:13.341Z"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a comment on an article specified by article_id",
    "exampleInput": {
      "comment": {
        "username": "weegembump",
        "body": "I want to add something to this discussion."
      }
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 15,
        "body": "I want to add something to this discussion.",
        "article_id": 3,
        "author": "weegembump",
        "votes": 0,
        "created_at": "2018-05-30T15:59:13.341Z"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates an article specified by article_id with the specified number of votes",
    "exampleInput": {
      "votes": {
        "inc_votes": 42
      }
    },
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article...",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 42,
        "article_img_url": "https://images.pexels.com/photos/97050/pexels-photo-97050.jpeg?w=700&h=700"
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes a single comment specified by comment_id"
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "topics": [
        {
          "username": "butter_bridge",
          "name": "jonny",
          "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
        }
      ]
    }
  }
}
